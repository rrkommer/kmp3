<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".GenericDetailFragment">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/generic_detail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Detail View"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/generic_detail_button_showtitle"
                    android:text="Titel"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <Button android:id="@+id/generic_detail_button_showmedien"
                    android:text="Medien"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/generic_detail_titlereplacement">
        </FrameLayout>
    </LinearLayout>
</FrameLayout>