<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:wave="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/generic_recyclerview"
            android:name="com.artefaktur.kmp3.GenericItemFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".GenericItemFragment"
            tools:listitem="@layout/fragment_genericitem"/>

    <com.artefaktur.kmp3.WaveView
            android:id="@+id/generic_wave_view"
            android:layout_width="match_parent"
            wave:sidebarAccentColor="?attr/colorAccent"
            wave:sidebarLettersColor="?attr/icon_color"
            android:layout_height="match_parent"/>
</LinearLayout>